---
import { getCollection } from "astro:content";
import CardProyecto from "../ui/CardProyecto.astro";

const proyectos = await getCollection("proyectos");
---

<div id="projects">
    <h2>Proyectos</h2>
    <ul class="projects">
        {proyectos.map((proyecto) => <CardProyecto proyecto={proyecto} />)}
    </ul>
</div>
<style>
    #projects {
        padding-bottom: 10rem;
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }
    .projects {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem 3rem;
        @media screen and (max-width: 800px) {
            grid-template-columns: 1fr;
        }
        padding-inline: 0;
    }
</style>
